<form>
	<div class="grid-container">
		<div class="grid-x grid-padding-x">
			<div class="cell">
				<div class="input-group">
					<label class="input-group-label">
						<i class="fas fa-user"></i>
					</label>
					<input class="input-group-field" type="text" name="name" placeholder="Name" required/>
				</div>
				<div class="input-group">
					<label class="input-group-label">
						<i class="fas fa-envelope"></i>
					</label>
					<input class="input-group-field" type="email" name="email" placeholder="Email" required/>
				</div>
				<div class="input-group">
					<label class="input-group-label">
						<i class="fas fa-heading"></i>
					</label>
					<input class="input-group-field" type="text" name="subject" placeholder="Subject" required/>
				</div>
				<div class="input-group">
					<label class="input-group-label">
						<i class="fas fa-pencil-alt"></i>
					</label>
					<textarea class="input-group-field" type="text" name="body" placeholder="Message" required></textarea>
				</div>
				<div class="input-group">
					<div class="">
						<input class="button medium" style="border-radius: 7px;" type="submit" value="Submit"/>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>