<div class="reveal" id="contact" data-reveal data-close-on-click="true"
 data-animation-in="slide-in-left" data-animation-out="slide-out-right">
	<div class="grid-container">
		<div class="grid-x grid-margin-x">
			<div class="cell">
				<h1 class="heading2">Send A Message</h1>
				
				{{>contactForm}}
				
				<button class="close-button" data-close aria-label="Close reveal" type="button">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		</div>
	</div>
</div>